{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "target": "ES2022",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
